// 프로그래머스 Level 2 1227_제이든케이스 문자열 만들기
// https://school.programmers.co.kr/learn/courses/30/lessons/12951?language=javascript

//  미완성

function solution(s) {
  let a = s.split("");

  //     공백 앞 대문자 변환 루프 .. 대문자>소문자는?
  for (i = 0; i < a.length; i++) {
    if (a[i] == " ") {
      a[i + 1] = a[i + 1].toUpperCase();
    }
  }

  return a.join("");
}
